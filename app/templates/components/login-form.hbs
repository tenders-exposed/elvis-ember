<div class="row">
  <div class="col s10 offset-s1 center-align" id="login-form">
    <h3>Sign in to your account</h3>
    <p>Don't have an account? Register <a class="link" {{action "showRegister"}}>here</a>.</p>
    {{#if errorMessage}}
      {{#each errorMessage.errors as |err|}}
        <p class="alert alert-error">{{err.message}}</p>
      {{/each}}
    {{/if}}
    <form {{action 'authenticate' on='submit'}} autocomplete="off">
      <div class="row">
        <div class="col s8 offset-s2">

          <div class="input-field">
            <input name="login_email" id="login_email" type="email" value="{{email}}" autocomplete="on" />
            <label for="inputEmail">Email address</label>
          </div>
          <div class="input-field">
            <input name="login_password" id="login_password" type="password" value="{{password}}" autocomplete="on" />
            <label for="password">Password</label>
          </div>
          <br>
        </div>

        {{async-button action=(action "authenticate") default="Sign in" pending="Logging in..." class="btn primary col s8 offset-s2"}}
      </div>
      <div class="row">
        <a class="btn col s3 offset-s2 primary default" {{action "authenticateTwitter"}}>
          <i class="fa fa-twitter"></i>
        </a>
        <a class="btn col s3 offset-s2 primary default" {{action "authenticateGithub"}}>
          <i class="fa fa-github"></i>
        </a>
        <div class="col s12">
          {{#link-to "account.recover" class="btn link primary"}}Lost password?{{/link-to}}
        </div>
      </div>
    </form>
  </div>

  <div class="col s10 offset-s1 center-align hide" id="register-form">
    <h3>Register your account</h3>
    <p>Do you have an account? Sign in <a class="link" {{action "showLogin"}}>here</a>.</p>
    {{#if errorMessage}}
      {{#each errorMessage.errors as |err|}}
        <p class="alert alert-error">{{err.message}}</p>
      {{/each}}
    {{/if}}
    <div class="row">
      <div class="col s8 offset-s2">
        <form id="register" class="form-signin" {{action 'register' on='submit'}} autocomplete="off">
          <div class="row">

            <div class="input-field col s12">
              <label for="email" class="sr-only">Email address</label>
              {{input id="register_email" value=email}}
            </div>

            <div class="input-field col s12">
              <label for="registerPassword">Your password here</label>
              {{input id="register_password" type="password" value=password}}
            </div>

            <div class="input-field col s12">
              <label for="registerPasswordConfirmation">...again, please?</label>
              {{input id="register_password_confirmation" type="password" value=password_confirmation}}
            </div>

            <div class="input-field col s12">
              {{async-button action=(action "register") default="Register" pending="Sending..." class="btn btn-lg btn-primary btn-blockright"}}
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
