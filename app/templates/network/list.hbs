<div class="page" id="mygraphs">
    <div class="container">
      <h1>My Projects</h1>
        <a href="#" class="btn primary"><i class="fa fa-plus"></i> New Visualisation</a>
        <div class="row">
            <div class="col md6"></div>
          {{#each model as |network|}}

          <div class="card-container col s3 m6 l4">
            <div class="card">
              <div class="card-image waves-effect waves-block waves-light">
                {{!-- <img class="activator" src="http://lorempixel.com/400/200/animals/"> --}}
                <img class="activator" src="/images/network_demo.jpg">
              </div>
              <div class="card-content">
                <h3 class="card-title activator ">
                  {{#if network.name}}
                    {{network.name}}
                  {{else}}
                    My Project
                  {{/if}}
                </h3>
                <small>{{network.id}}</small>

                <p class="row">
                  <small class="left">14 days ago</small>
                  <small class="right">
                    {{#link-to 'network.show' network.id}}
                      Load project
                    {{/link-to}}
                  </small>

                </p>
              </div>
              <div class="card-reveal">
                <span class="card-title  el-title">
                  {{#if network.name}}
                    {{network.name}}
                  {{else}}
                    My Project
                  {{/if}}
                </span>
                <p class="el-title grey-text project-query">
                  <span class="project-countries">
                    {{#each network.query.countries as |country|}}
                      {{world-flag country 32}}
                    {{/each}}
                  </span>
                  <span class="project-years">( {{network.firstYear}} - {{network.lastYear}} )</span>
                </p>

                <p class="grey-text project-description">
                  {{network.description}}
                </p>

                <div class="relative project-cpvs">
                  <div class="show-cpvs"> {{network.cpvsCount}} CPVS selected...</div>
                  <div class="absolute project-listCpvs hide">
                    {{#each network.query.cpvs as |cpv|}}
                       <span class="cpv-selected"> {{cpv}}</span>
                    {{/each}}
                  </div>
                </div>

                <br>
                <div class="controls-projects">
                  <div class="row">
                    <div class="col s9 control-icon-light">
                      <h6 class="el-label" {{action "deleteNetwork" network.id on="click"}}>
                        {{fa-icon 'trash' size=1}}
                        <small>DELETE NETWORK</small>
                      </h6>
                    </div>
                    <div class="col s3 right-align">
                      {{#link-to 'network.show' network.id}}
                        {{fa-icon 'arrow-circle-right' size=3}}
                      {{/link-to}}
                    </div>
                  </div>

                </div>

              </div>
            </div>
          </div>
          {{/each}}

          <div class="card-container col s3 m6 l4">
            <div class="card">
              <div class="card-image waves-effect waves-block waves-light">
                {{!-- <img class="activator" src="http://lorempixel.com/400/200/animals/"> --}}
                {{#link-to 'network.new'}}
                <img class="activator" src="/images/new_visualisation.jpg">
                {{/link-to}}
              </div>
              <div class="card-content">
                <span class="card-title">
                 New visualisation
                  <br>
                  <small>start right now</small>
                </span>
              </div>
            </div>
          </div>
        </div>

    </div>
</div>
