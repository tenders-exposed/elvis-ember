          <!-- TODO: generate working links from the reference number -->
          <a class="btn-small link primary" href="http://ted.europa.eu">view on ted.europa.eu <i class="fa fa-external-link"></i></a>
          <a class="btn-small link primary" href="http://opented.eu">view on opented.eu <i class="fa fa-external-link"></i></a>
        </section>

        <!-- TODO: output proper Reference number (not ID)-->
        <section>
          <h5>Reference number</h5>
          <div>{{model.award.id}}</div>
        </section>

        <!-- TODO: output contract title in English -->
        {{#if model.award.titleEnglish}}
        <section>
          <h5>Title (English)</h5>
          <div>Beer delivery for railway catering at SBB.</div>
        </section>
        {{/if}}

