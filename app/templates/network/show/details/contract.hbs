          <div class="tags">
              <!-- TODO: output proper country and flag-->
              <span class="tag">{{world-flag 'DE' 16}} Germany</span>
              <!-- TODO: output isEuFunded variable -->
              <span class="tag">
                {{fa-icon model.eu_project size="1"}}
                EU Funded
              </span>
              <!-- TODO: output isFrameWorkAgreement variable -->
              <span class="tag">
                {{fa-icon model.framework size="1"}}
                Framework Agreement
              </span>
              <!-- TODO: output isGpaCovered variable -->
              <span class="tag">
                {{fa-icon model.subcontracted size="1"}}
                GPA Covered
              </span>
          </div>
        </section>

        <section class="row">
          <div class="col s3 summary">
            <!-- TODO: output total award of the contract -->
            <h5 class="summary-title">Total price</h5>
            <div class="summary-value">{{format-amount model.tender.value.x_amount_eur}}</div>
          </div>
          <div class="col s3 summary">
            <h5 class="summary-title">Award date</h5>
            <div class="summary-value">{{moment-format model.award.date.full 'DD MMM YYYY' 'YYYY-MM-DD'}}</div>
          </div>
          <div class="col s3 summary">
            <!-- TODO: output procedureType variable -->
            <h5 class="summary-title">Procedure</h5>
            <div class="summary-value"> {{format-empty model.procurement-method  "n/a"}} </div>
          </div>
          <div class="col s3 summary">
            <!-- TODO: output awardCriteria variable -->
            <h5 class="summary-title">Award criteria</h5>
            <div class="summary-value"> {{format-empty model.award_criteria "n/a"}} </div>
          </div>
        </section>

        <section>
          <h5>Description</h5>
          <p>{{model.award.description}}</p>
        </section>

        <section>
          <h5>Description (English)</h5>
          <p>{{model.award.description}}</p>
        </section>

