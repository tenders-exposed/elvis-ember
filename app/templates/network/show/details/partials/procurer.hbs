<div class="container container-entity relative">
  <div class="row">
    <div class="col s12 title fs1">
      <div class="el-label-dark fs2 procurer">
        {{fa-icon 'circle' size=1}} procurer
      </div>
      <div class="el-title fs5">
        {{model.name}}
        <span class="fs3 dark-text">( {{model.firstYear}} - {{model.lastYear}} )</span>
      </div>
      <hr>
    </div>
  </div>


  <div class="row second-row">
    <div class="col s3">
      <div class="flag">
        {{fa-icon 'flag' size=1}} sole bidder {{fa-icon 'question-circle' size=1}}
      </div>
      <div class="flag">
        {{fa-icon 'flag' size=1}} frequent winner {{fa-icon 'question-circle' size=1}}
      </div>
    </div>
    <div class="col s3">
      <div class="el-label-dark fs1">total income</div>
      <div class="el-title fs5">{{format-amount model.total_earnings}}</div>
    </div>
    <div class="col s3">
      <div class="el-label-dark fs1">avg competition</div>
      <div class="el-title fs5">1.7</div>
    </div>
    <div class="col s2">
      <div class="el-label-dark fs1">data missing</div>
      <div class="el-title fs5">{{model.missing_values}}%</div>
    </div>

  </div>
</div>
