    <div class="detailview-body">

      <h5 class="detailview-restriction">Displaying Period: <strong>2012-2016</strong></h5>

      <section class="external-links">
        <a class="btn-small link primary" href="http://opented.eu">view on opentender.eu <i class="fa fa-external-link"></i></a>
      </section>

      <section>
        <h5>Name</h5>
        <h2>Elvetino AG</h2>

        <div class="tags">
          <span class="tag">{{world-flag "CH" 16}} Switzerland</span>

          <span class="tag redflag"><i class="fa fa-flag"></i> Low avg competition</span>

        </div>
      </section>

      <section class="row">
        <div class="col s4 summary">
          <h5 class="summary-title">All awarded amounts</h5>
          <div class="summary-value">125 351 €</div>
        </div>
        <div class="col s4 summary">
          <h5 class="summary-title">Awarded amount unknown in</h5>
          <div class="summary-value">61% <small>tenders</small></div>
        </div>

        <div class="col s3 summary">
          <h5 class="summary-title">AVG. Competition</h5>
          <div class="summary-value">1.7 <small>bids per tender</small></div>
        </div>
      </section>

      <section>
        <h5>Contracts</h5>
        <table class="contracts-table">
          <thead>
          <tr>
            <th class="name">Contract</th>
            <th class="supplier">Supplier</th>
            <th class="bids">Bids</th>
            <th class="award">Awarded amount</th>
          </tr>
          </thead>
          <tbody>
          <tr class="contract">
            <td class="name">{{#link-to "network.show.details.contract" "59312b352dcb567c94000003" "58275665c91dcf4f891e5cef"}}Beer delivery for railway catering at SBB{{/link-to}}</td>
            <td class="supplier"><span class="figure-supplier small"></span> {{#link-to "network.show.details.show" "suppliers" 995348}}Heineken Switzerland AG{{/link-to}}</td>
            <td class="bids">47</td>
            <td class="award">1234 €</td>
          </tr>
          </tbody>
        </table>
      </section>

      <section>
        <h5>Contracted supplying companies</h5>
        <div><span class="figure-supplier small"></span> {{#link-to "network.show.details.show" "suppliers" 995348}}Heineken Switzerland AG{{/link-to}}</div>
      </section>

      <section>
        <h5>Tenders over time</h5>
        <div>
          {{details-graph
            id="details-graph-id"
            contracts=modelDetails.contracts
            fields=fields.contracts
            partialPath="network/show/details/partials/tables/contracts"
            route="procurers"
            nodeId=params.id
          }}
        </div>
      </section>

    </div>


