<div class="detailview-head">

  <div class="detailview-title">
    <span class="figure-relationship small"></span> Relationship<br>
  </div>

  <div class="close" {{action "closeDetails"}}>
    {{fa-icon 'times-circle'}}
  </div>

</div>

<div class="detailview-body-wrapper">
  {{#ember-scrollable}}

    <div class="detailview-body">

      <h5 class="detailview-restriction">
        Displaying Period: <strong>{{modelDetails.to.firstYear}} - {{modelDetails.to.lastYear}}</strong>
      </h5>

      <section>
        <br><br>
        <h5>Actors</h5>
        <div>
          <span class="figure-procurer small"></span>
          {{#link-to "network.show.details.show" "procurers" 13333}}
            {{modelDetails.from.name}}
          {{/link-to}}
        </div>
        <div>
          <span class="figure-supplier small"></span>
          {{#link-to "network.show.details.show" "suppliers" 995348}}
            {{modelDetails.to.name}}
          {{/link-to}}
        </div>

        <div class="tags">
          {{#each-in modelDetails.to.flags as |flName flValue|}}
            <span class="tag redflag"><i class="fa fa-flag"></i> {{flName}}</span>
          {{/each-in}}
        </div>
      </section>

      <section class="row">
        <div class="col s4 summary">
          <h5 class="summary-title">All awarded amounts</h5>
          <div class="summary-value">{{format-amount modelDetails.to.total_earnings}}€</div>
        </div>
        <div class="col s4 summary">
          <h5 class="summary-title">Awarded amount unknown in</h5>
          <div class="summary-value">{{modelDetails.to.missing_values}}% <small>tenders</small></div>
        </div>

        <div class="col s3 summary">
          <h5 class="summary-title">AVG. Competition</h5>
          <div class="summary-value">{{modelDetails.to.average_competition}} <small>bids per tender</small></div>
        </div>
      </section>

      <section>
        <h5>Contracts</h5>

        {{details-data-table
          class="contracts-table"
          content=modelDetails.to.contracts
          fields=fields.contractsRelationship
          partialPath="network/show/details/partials/tables/contracts-relationship"
          route="relationships"
          nodeId=params.id
          componentTable="contracts-relationship"
        }}

