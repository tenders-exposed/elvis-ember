<div class="container container-entity relative">
  <div class="row">
    <div class="col s12 title">
      <div class="type supplier">
        {{fa-icon 'circle' size=1}} supplier
      </div>
      <div class="name">
        {{model.name}}
        <span class="years">( {{model.firstYear}} - {{model.lastYear}} )</span>
      </div>
      <hr>
    </div>
  </div>
  <div class="row second-row">
    <div class="col s3">
      <div class="flag">
        {{fa-icon 'flag' size=1}} sole bidder {{fa-icon 'question-circle' size=1}}
      </div>
      <div class="flag">
        {{fa-icon 'flag' size=1}} frequent winner {{fa-icon 'question-circle' size=1}}
      </div>
    </div>
    <div class="col s3">
      <div class="title">total income</div>
      <div class="value">{{model.total_earnings}} <small>M</small></div>
    </div>
    <div class="col s2">
      <div class="title">avg competition</div>
      <div class="value">1.7</div>
    </div>
    <div class="col s2">
      <div class="title">data missing</div>
      <div class="value">{{model.missing_values}}%</div>
    </div>
  </div>
  <div class="row">
  {{#tabbed-content active=activeTabDetails on-change="changeTabDetails" active-class="tab-button--active" as |manager|}}
      <div class="tabs__nav">
      {{#tab-button class="tab-button"  manager=manager name="contracts"}}
        <a>contracts</a>
      {{/tab-button}}
      {{#tab-button class="tab-button"  manager=manager name="procurers"}}
        <a>procurers</a>
      {{/tab-button}}

      </div>
    {{#tab-panel manager=manager name="contracts" class='tab-panel'}}
      {{details-data-table
          class="contracts"
          content=model.contracts
          fields=fields.contracts
          partialPath="network/show/details/partials/supplier/contracts"
      }}
    {{/tab-panel}}
    {{#tab-panel manager=manager name="procurers" class='tab-panel'}}
      {{details-data-table
          class="procurers"
          content=model.procurers
          fields=fields.procurers
          partialPath="network/show/details/partials/supplier/procurers"
      }}
    {{/tab-panel}}

  {{/tabbed-content}}
  </div>
</div>
